@using Zero_Web.Variable;

<head>
   <link href="~/Content/css/Store/ZeroPlus.css" rel="stylesheet">
</head>

@{
   ViewBag.Title = "ZeroWorks - Store";
}

<div class="ZeroPlus container-fluid">

   <div class="Zero container-fluid">
      <img class="ZeroPlusImage img-fluid w-100" src="@ImageSource.SVG.ZeroPlus" />
      <img class="ZeroPlusBlurrImage img-fluid w-100" src="@ImageSource.SVG.TopGameBlurr" />
      <div class="ZeroPlusDescription">
         <p class="Sponsored">Gesponsorter Inhalt</p>
         <b>Zero +</b>
         <p id="description">Alles in einem Abo<br>Apps | Spiele | Musik | Filme</p>
         <button class="GetZeroPlus">Kostenlos nutzen</button>
      </div>
   </div>

   <div class="ZeroPlusContent container-fluid">
      @Html.Partial("/Views/Store/Part/ProductList.cshtml")
   </div>

   <div class="ZeroPlusBottom container-fluid">
      <img class="BottomImage img-fluid w-100" src="@ImageSource.SVG.ZeroPlusBottom" />
   </div>

</div>

