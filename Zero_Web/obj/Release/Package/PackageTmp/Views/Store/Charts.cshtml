@using Zero_Web.Variable;

<head>
   <link href="~/Content/css/Store/Charts.css" rel="stylesheet">
</head>

@{
   ViewBag.Title = "ZeroWorks - Store";
}

<!-- Top Bar -->
<div class="ChartsFilter container-fluid">
   <div class="ChartList row">
      <p class="Chart Global col-auto">Globale Trends</p>
      <p class="Chart Local col-auto">Lokale Trends</p>
      <p class="Chart TopGames col-auto">Top-Games</p>
      <p class="Chart Top col-auto">Erfolgreichste</p>
      <p class="Chart Best col-auto">Bestseller</p>
      <p class="Chart Reply col-auto">Von Kuratoren bewertet</p>
   </div>
</div>

<!-- Charts Content -->
<div class="ChartsContent container-fluid">

   @{
      for (int a = 0; a < 3; a++)
      {
         <div class="ChartItemList row">

            @for (int i = 1; i < 5; i++)
            {
               <div class="ChartsItem col">
                  <div class="ChartImage container-fluid">
                     <img class="ChartItemImage img-fluid" src="@ImageSource.SVG.ChartsIcon" />
                     <img class="ChartItemImageBlur img-fluid" src="@ImageSource.SVG.ChartsBlurr" />
                  </div>
                  <div class="ChartInfo container-fluid">
                     @if (i < 9)
                     {
                        <p class="Position">#@i</p>
                     }
                     else
                     {
                        <p class="Position medium">#@i</p>
                     }
                     <b class="ChartName">Outlast</b>
                     <p class="ChartCompany">Red Barrels</p>
                  </div>
               </div>
            }
         </div>
      }
   }

</div>
