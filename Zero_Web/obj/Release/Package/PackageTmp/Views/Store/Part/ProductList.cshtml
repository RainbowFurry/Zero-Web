@using Zero_Web.Variable;

<head>
   <link href="~/Content/css/Store/Part/ProductList.css" rel="stylesheet">
</head>

<div class="ProductList container-fluid pt-5 pb-5">
    <div class="Combind container-fluid">
        <div class="ListTopic container-fluid pb-3">
            <div class="row">
                <b class="ListName col-auto pl-5">Angesagt und für dich empfohlen</b>
                <p class="ListInfo col-auto pl-1 pt-2">(Gesponsert)</p>
            </div>
        </div>

        <div class="List row pl-5 pr-5">
            @{
                bool sale = true;

                for (int i = 0; i < 6; i++)
                {
                    if (!sale)
                    {
                        <div class="Item col-6 col-md-2">
                            <img class="ProductIcon img-fluid" src="@ImageSource.SVG.ExampleProduct" />
                            <p class="ProductName pt-3">Minecraft Story Mode</p>
                            <p class="Price">9,99€</p>
                        </div>
                    }
                    else
                    {
                        <div class="Item col-6 col-md-2">
                            <img class="ProductIcon img-fluid" src="@ImageSource.SVG.ExampleProduct" />
                            <p class="ProductName pt-3">Minecraft Story Mode</p>
                            <div class="row">
                                <s class="OldPrice col-auto">13,99€</s>
                                <p class="NewPrice col-auto">6,99€</p>
                                <p class="Discount col-auto">-50%</p>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>