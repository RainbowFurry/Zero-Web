@using Zero_Web.Variable;

<head>
    <link href="~/Content/css/Store/Alert/Opinion.css" rel="stylesheet">
</head>

<div class="Opinion container-fluid">

    <div class="OpinionBackground container-fluid">
        <img class="OpinionBackgroundImage img-fluid w-100 pl-5 pr-5" src="@ImageSource.SVG.AlertBackground" />
        <img class="OpinionBackgroundBlurImage img-fluid w-100 pl-5 pr-5" src="@ImageSource.SVG.AlertBackgroundBlur" />
    </div>

    <div class="container-fluid">
        <div class="row">

            <p class="Question col">Interessieren dich Meinnungen von Kuratoren</p>

            <div class="OpinionOptions col">
                <div class="container-fluid">
                    <div class="row">
                        <p class="Option1 Option col">Auf jeden Fall</p>
                        <p class="Option2 Option col">Ein wenig</p>
                        <p class="Option3 Option col">Eher nicht</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
