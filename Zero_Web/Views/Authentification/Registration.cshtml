@model  Zero_Web.Models.User

<head>
    <link href="~/Content/css/Authentification/Registration.css" rel="stylesheet">
    <link href="~/Content/css/Authentification/style.css" rel="stylesheet">
</head>

@{
    ViewBag.Title = "Registration";
}

<div class="Zero Registration">

    <h2>Zero Registration</h2>
    <img src="~/Content/images/icons/icon-144x144.png" />

    <div>
        @using (Html.BeginForm())
        {
            @Html.NameFor(model => model.NickName)
            @Html.EditorFor(model => model.NickName)
            @Html.ValidationMessageFor(model => model.NickName)

            @Html.NameFor(model => model.FirstName)
            @Html.EditorFor(model => model.FirstName)

            @Html.NameFor(model => model.LastName)
            @Html.EditorFor(model => model.LastName)

            @Html.NameFor(model => model.Street)
            @Html.EditorFor(model => model.Street)

            @Html.NameFor(model => model.HouseNumber)
            @Html.EditorFor(model => model.HouseNumber)

            @Html.NameFor(model => model.City)
            @Html.EditorFor(model => model.City)

            @Html.NameFor(model => model.Postcode)
            @Html.EditorFor(model => model.Postcode)

            @Html.NameFor(model => model.Age)
            @Html.EditorFor(model => model.Age)

            @Html.NameFor(model => model.Email)
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)

            @Html.NameFor(model => model.PhoneNumber)
            @Html.EditorFor(model => model.PhoneNumber)

            @Html.NameFor(model => model.Password)
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)

            @Html.NameFor(model => model.ConfirmPassword)
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)

            <input type="submit" value="Registrieren">
        }

        <p>Abbrechen und zum @Html.ActionLink("Login", "Login", "Authentification")</p>

    </div>
</div>
