@model  Zero_Web.Models.User

@{
    ViewBag.Title = "Forgot Password";
}

<div class="Zero Login">

    <h2>Zero Login</h2>
    <img src="~/Content/images/icons/icon-144x144.png" />

    @using (Html.BeginForm())
    {
        <div class="Zero Password">
            <div class="field">

                @Html.NameFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)

            </div>
            <input type="submit" value="ForgotPassword">
        </div>
    }
    @Html.ActionLink("Zurück zum Login", "Login", "Authentification")

</div>

<link href="~/Content/css/Authentification/Login.css" rel="stylesheet">
<link href="~/Content/css/Authentification/style.css" rel="stylesheet">